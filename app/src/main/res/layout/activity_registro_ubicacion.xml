<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutAgregarUbicacion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_margin="16dp"
    tools:context=".Activities.RegistroUbicacion">

    <TextView
        android:id="@+id/textTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar nueva ubicación"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editNombreUbicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre de ubicación"
        android:inputType="textPersonName"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editDescripcionUbicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Referencia (opcional)"
        android:inputType="textMultiLine"
        android:minLines="2"
        android:layout_marginBottom="8dp" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnUbicacionActual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="📍 Usar ubicación actual" />

    <Button
        android:id="@+id/btnGuardarUbicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar ubicación"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancelar" />

</LinearLayout>
